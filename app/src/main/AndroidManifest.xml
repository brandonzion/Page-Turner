<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pageturner">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MICROPHONE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature android:name="android.hardware.microphone"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <application
        android:name=".playList"
        android:allowBackup="true"
        android:icon="@mipmap/note"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/note"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".startPage">
        </activity>
        <activity android:name=".Play"/>
        <activity android:name=".pictures" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".instructions"/>
        <activity android:name=".startInstructions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>